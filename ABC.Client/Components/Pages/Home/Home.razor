@using ABC.Shared.Models
@using System.Globalization
@using ABC.Shared.Utility
@page "/"

<PageTitle>ABC - Home</PageTitle>

<section class="container my-lg-5">

    <div id="carouselExampleCaptions" class="carousel slide carousel-fade" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>

        <div class="carousel-inner">
            <a href="Shop">
                <div class="carousel-item active">
                    <img src="image/sliderOne.jpg" class="d-block mx-auto max-ht" alt="...">
                    <div class="carousel-caption d-none d-md-block mb-5 p-3">
                        <h5>Discover. Upgrade. Secure.</h5>
                        <p class="text-light">Elevate Your Tech Experience.</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="image/sliderTwo.jpg" class="d-block mx-auto max-ht" alt="...">
                    <div class="carousel-caption d-none d-md-block mb-5 p-3">
                        <h5>Gaming Gear</h5>
                        <p class="text-light">Cater to gamers with a range of high-performance gaming PCs, peripherals, and accessories.</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="image/sliderThree.jpg" class="d-block mx-auto max-ht" alt="...">
                    <div class="carousel-caption d-none d-md-block mb-5 p-3">
                        <h5>Tech Enthusiasts</h5>
                        <p class="text-light">Curate a selection of cutting-edge electronics and gadgets for early adopters and tech enthusiasts.</p>
                    </div>
                </div>
            </a>
        </div>

        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>

    </div>

    @* <section class="banner rounded min-height">
        <div>
            <h1>Elevate Your Tech Experience</h1>
            <p>Discover. Upgrade. Secure.</p>
        </div>
        <div>
            <a href="shop" class="btn btn-secondary rounded">Shop Now</a>
        </div>
    </section>

    <div class="row my-3"></div> *@

    <section class="row mt-5 mb-5 min-height-section">
        <div class="text-center">
            <h1>Best Selling Products</h1>
            <p>Elevate your experience!</p>
        </div>
        <div class="row my-3 mx-auto">
            @if (BestSellingProducts != null && BestSellingProducts.Any())
            {
                foreach (var orderDetail in BestSellingProducts.Take(3))
                {
                    <div class="col-md-4 my-3">
                        <div class="card productcard h-100 mx-auto">
                            <a href="ProductDetails?product=@orderDetail.productName&id=@orderDetail.Id" class="text-decoration-none">
                                <img src="@orderDetail.ImageUrl" class="img-fluid image">
                                <div class="card-body d-flex flex-column">
                                    <h3 class="card-title">@orderDetail.productName</h3>
                                    <div class="card-footer footerCardBest">
                                        <p class="card-text fw-bold">@orderDetail.RetailPrice.ToString("C", new CultureInfo("en-PH"))</p>
                                        <p class="card-text">@orderDetail.StockPerStore.TotalStocks left</p>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                }
            }
            else
            {
                <h4 class="text-center">No products to show</h4>
            }
        </div>
    </section>

    <div class="row my-5"></div>

    <section class="row mt-5 mb-5 min-height-section">
        <div class="text-center">
            <h1>New Arrival Items</h1>
        </div>
        <div class="row my-3 mx-auto">
            @if (ProductList != null && ProductList.Any())
            {
                @foreach (var product in ProductList.Take(12))
                {
                    @if (product.status == SD.InStock || product.status == SD.AddsomeLowStock || product.status == SD.AheadLowStock)
                    {
                        <div class="col-md-3 my-3">
                            <div class="card productcard h-100 mx-auto">
                                <a href="ProductDetails?product=@product.productName&id=@product.Id" class="text-decoration-none">
                                    <img src="@product.ImageUrl" class="img-fluid card-img-top">
                                    <div class="card-body d-flex flex-column">
                                        <h3 class="card-title mb-5 h-50 fw-bold">@product.productName</h3>
                                        <div class="d-flex justify-content-between card-footer">
                                            <p class="card-text fw-bold">@product.RetailPrice.ToString("C", new CultureInfo("en-PH"))</p>
                                            <p class="card-text">@product.StockPerStore.TotalStocks left</p>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        </div>
                    }
                }
            }
            else
            {
                <h3 class="text-center">No products to show</h3>
            }
        </div>
    </section>

    <br />
</section>


